<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/md_theme_dark_secondary">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/addTitle"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:hint="Podaj tytuł"
        app:layout_constraintBottom_toTopOf="@+id/addAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/addAuthor"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:hint="Podaj autora"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/addLength"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:hint="Podaj długość"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addAuthor"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zapisz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addLength"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"/>

    <ImageButton
        android:id="@+id/closeAddingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_cancel_24"
        tools:ignore="SpeakableTextPresentCheck"
        android:backgroundTint="#00000000"/>


</androidx.constraintlayout.widget.ConstraintLayout>